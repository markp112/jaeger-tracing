{
  "name": "jaeger-tracing",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server.js",
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register ./src/server.ts",
    "ext": "ts, js"
  },
  "scripts": {
    "start": "node dist/server.js",
    "lint": "eslint . --ext .ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "nodemon src/server.ts",
    "build": "tsc --project tsconfig.json && tscpaths -p tsconfig.json -s ./src -o ./dist"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.0",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "eslint": "^8.46.0",
    "nodemon": "^3.0.1",
    "tsconfig-paths": "^4.2.0",
    "tscpaths": "^0.0.9",
    "tspath": "^2.6.8",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@opentelemetry/api": "1.4.1",
    "@opentelemetry/auto-instrumentations-node": "^0.38.0",
    "@opentelemetry/exporter-jaeger": "1.15.1",
    "@opentelemetry/exporter-trace-otlp-http": "^0.41.1",
    "@opentelemetry/instrumentation": "0.41.1",
    "@opentelemetry/instrumentation-express": "0.33.0",
    "@opentelemetry/instrumentation-http": "0.41.1",
    "@opentelemetry/propagator-ot-trace": "^0.27.0",
    "@opentelemetry/resources": "^1.15.1",
    "@opentelemetry/sdk-node": "^0.41.1",
    "@opentelemetry/sdk-trace-base": "1.15.1",
    "@opentelemetry/sdk-trace-node": "1.15.1",
    "@opentelemetry/semantic-conventions": "1.15.1",
    "@prisma/client": "5.1.1",
    "@prisma/instrumentation": "5.1.0",
    "axios": "^1.4.0",
    "body-parser": "^1.20.2",
    "express": "^4.18.2",
    "pino": "^8.15.0",
    "pino-http": "^8.4.0",
    "pino-pretty": "^10.2.0",
    "prisma": "5.1.1",
    "uuid": "^9.0.0"
  }
}
